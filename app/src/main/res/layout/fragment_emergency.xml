<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">


    <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:padding="10dp"
            android:background="@drawable/ic_events_ongoing_list_background"
            android:orientation="horizontal">


        <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_dot" />

        <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:maxLines="5"
                android:paddingStart="10dp"
                android:text="Ambulance"
                android:textColor="@color/white"
                android:textSize="18sp" />


        <ImageView
                android:id="@+id/ambulance"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/ic_phone_call" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:padding="10dp"
            android:background="@drawable/ic_events_ongoing_list_background"
            android:orientation="horizontal">


        <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_dot" />

        <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:maxLines="5"
                android:paddingStart="10dp"
                android:text="Hospital"
                android:textColor="@color/white"
                android:textSize="18sp" />


        <ImageView
                android:id="@+id/hospital_icon"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/ic_maps" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:padding="10dp"
            android:background="@drawable/ic_events_ongoing_list_background"
            android:orientation="horizontal">


        <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_dot" />
        <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:maxLines="5"
                android:paddingStart="10dp"
                android:text="@string/securityMale"
                android:textColor="@color/white"
                android:textSize="18sp" />


        <ImageView
                android:id="@+id/anshu_singh"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/ic_phone_call" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:padding="10dp"
            android:background="@drawable/ic_events_ongoing_list_background"
            android:orientation="horizontal">


        <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_dot" />

        <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:maxLines="5"
                android:paddingStart="10dp"
                android:text="@string/securityFemale"
                android:textColor="@color/white"
                android:textSize="18sp" />


        <ImageView
                android:id="@+id/anshu_singh_f"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/ic_phone_call" />


    </LinearLayout>
</LinearLayout>