<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_this_rectangle"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/workshopCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="22dp"
            android:paddingTop="16dp"
            android:paddingEnd="42dp"
            android:paddingBottom="16dp"
            app:srcCompat="@drawable/ic_fitness" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

        <TextView
                android:id="@+id/workshopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingEnd="5dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp" />

        <Button
                android:id="@+id/button2"
                style="@android:style/Widget.DeviceDefault.Button.Small"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@drawable/workshops_rectangle"
                android:text="@string/pay_now"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>


</LinearLayout>
